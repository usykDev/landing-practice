<div class="page">

	{{#with header}}
	<div class="header">
		<div class="section__content">

			<header class="header__content">
				<div class="header__block">
					<img src="/svg/apple/apple.svg" alt="Apple" class="header__icon">

					<hav class="header__block">
						{{#each links}}
						<a href="{{url}}" class="header__link">{{text}}</a>
						{{/each}}
					</hav>
				</div>

				<div class="header__block">
					<img src="/svg/apple/search.svg" alt="Search" class="header__icon">
					<img src="/svg/apple/profile.svg" alt="Profile" class="header__icon">
				</div>
			</header>

		</div>
	</div>

	<div class="offer">
		<div class="offer__content">
			{{#with ad}}
			<div class="offer_title">{{title}}</div>

			<div class="offer_action">
				{{#with link}}
				<a href="{{url}}" class="offer_link">{{text}}</a>
				{{/with}}
			</div>
			{{/with}}
		</div>
	</div>
	{{/with}}





